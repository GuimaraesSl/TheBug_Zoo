<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/home_background"
            android:scaleType="centerCrop"
            android:src="@drawable/back_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonMeioUmido"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_button"
            android:contentDescription="@string/damp_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iconMeioUmido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/damp_icon"
            app:layout_constraintEnd_toEndOf="@+id/buttonMeioUmido"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="@+id/buttonMeioUmido"
            app:layout_constraintTop_toTopOf="@+id/buttonMeioUmido"
            app:srcCompat="@drawable/icon_meio_umido" />

        <TextView
            android:id="@+id/text_meio_umido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/meio_umido"
            android:textColor="@color/white"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/iconSeta"
            app:layout_constraintStart_toEndOf="@+id/iconMeioUmido"
            app:layout_constraintTop_toTopOf="@+id/buttonMeioUmido" />

        <ImageButton
            android:id="@+id/buttonTaxidermizados"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="40dp"
            android:background="@drawable/background_button"
            android:contentDescription="@string/taxidermized_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMeioUmido" />

        <ImageView
            android:id="@+id/iconTaxidermizados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/taxidermized_icon"
            app:layout_constraintEnd_toEndOf="@+id/buttonTaxidermizados"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="@+id/buttonTaxidermizados"
            app:layout_constraintTop_toTopOf="@+id/buttonTaxidermizados"
            app:srcCompat="@drawable/icon_taxidermizados" />

        <TextView
            android:id="@+id/textTaxidermizados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/taxidermizados"
            android:textColor="@color/white"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/iconSeta2"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toEndOf="@+id/iconTaxidermizados"
            app:layout_constraintTop_toTopOf="@+id/buttonTaxidermizados" />

        <ImageButton
            android:id="@+id/buttonOsteologia"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="40dp"
            android:background="@drawable/background_button"
            android:contentDescription="@string/osteology_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTaxidermizados" />

        <ImageView
            android:id="@+id/iconOsteologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/osteology_icon"
            app:layout_constraintEnd_toEndOf="@+id/buttonOsteologia"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="@+id/buttonOsteologia"
            app:layout_constraintTop_toTopOf="@+id/buttonOsteologia"
            app:srcCompat="@drawable/icon_osteologia" />

        <TextView
            android:id="@+id/textOsteologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/osteologia"
            android:text="@string/osteologia"
            android:textColor="@color/white"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/iconSeta3"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toEndOf="@+id/iconOsteologia"
            app:layout_constraintTop_toTopOf="@+id/buttonOsteologia" />

        <ImageView
            android:id="@+id/iconSeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/forward_arrow"
            app:layout_constraintEnd_toEndOf="@+id/buttonMeioUmido"
            app:layout_constraintTop_toTopOf="@+id/buttonMeioUmido"
            app:srcCompat="@drawable/icon_seta" />

        <ImageView
            android:id="@+id/iconSeta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/forward_arrow"
            app:layout_constraintEnd_toEndOf="@+id/buttonTaxidermizados"
            app:layout_constraintTop_toTopOf="@+id/buttonTaxidermizados"
            app:srcCompat="@drawable/icon_seta" />

        <ImageView
            android:id="@+id/iconSeta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/forward_arrow"
            app:layout_constraintEnd_toEndOf="@+id/buttonOsteologia"
            app:layout_constraintTop_toTopOf="@+id/buttonOsteologia"
            app:srcCompat="@drawable/icon_seta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/drawer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000FF"
        app:headerLayout="@layout/drawer_header"
        app:itemIconSize="30dp"
        app:itemIconTint="#707070"
        app:itemTextAppearance="@style/DrawerStyle"
        app:itemTextColor="#707070"
        app:menu="@menu/drawer_menu"/>


</androidx.drawerlayout.widget.DrawerLayout>